  <tr class="cell1">
    <td colspan="100%" class="header">
    <% if logged_in? %>
      <span class="header_link">
        <%= link_to(current_user.email, profile_path) %>
      </span>
    <% end %>
    <% unless current_page?(root_path) %>
      <span class="header_link">
        <%= link_to('Home', root_path) %>
      </span>
    <% end %>
    <% if defined?(@topic) && current_page?(topic_posts_path(1)) %>
      <span class="header_link">
        <%= link_to('Reply', @topic) %>
      </span>
    <% end %>
    <% unless logged_in? || current_page?(login_path) %>
      <span class="header_link">
        <%= link_to('Log In', login_path) %>
      </span>
    <% end %>
    <% if defined?(@topic) && !@topic.id.nil? && current_page?(new_topic_post_path(@topic))\
      || (defined?(@topic) && defined?(params[:id]) && !@topic.id.nil? && !params[:id].nil? && current_page?(quote_path(@topic, params[:id]))) %>
      <span class="header_link">
        <%= link_to('Topic', @topic) %>
      </span>
    <% end %>
    <% if current_page?(root_path) %>
      <span class="header_link">
        <%= link_to('New Topic', new_topic_path) %>
      </span>
    <% end %>
    <% if logged_in? %>
      <span class="header_link">
        <%= link_to('Log Out', logout_path, method: :delete) %>
      </span>
    <% end %>
    </td>
  </tr>
