<% provide(:title, @topic.title)
   provide(:width, '580')
   provide(:form_first, 'true') %>
<%= form_for @post do |f| %>
<table width="100%" class="content" style="<%= width_override yield(:width) %>">
  <%= f.hidden_field :topic_id, value: @topic.id %>
  <%= render 'layouts/header' %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= render 'quote',               f: f if @quote %>
  <%= render 'shared/content_form', f: f %>
  <%= render 'shared/post_options', f: f if @quote || logged_in? %>
  <%= render 'shared/submit_form',  f: f %>
</table>
<% end %>
