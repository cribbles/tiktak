<% provide(:title, @topic.title)
   provide(:page_size, 'medium') %>
<%= form_for @post do |f| %>
  <%= f.hidden_field :topic_id, value: @topic.id %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= render 'quote_shell',         f: f, quote: @quote if @quote %>
  <%= render 'shared/content_form', f: f %>
  <%= render 'shared/recaptcha',    f: f unless logged_in? %>
  <%= render 'shared/form_options', f: f if @quote || logged_in? %>
  <%= render 'shared/submit_form',  f: f %>
<% end %>
