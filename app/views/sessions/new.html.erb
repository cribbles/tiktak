<% provide(:title, 'Log In')
   provide(:width, '460') %>
<p class="info" align="center">
  New user? <b><%= link_to 'Sign up', signup_path %></b> here!
</p>
<%= form_for(:session, url: login_path) do |f| %>
<table>
  <tr class="info">
    <td align="left">
      <p class="info" align="center">
        <b><%= f.label :email, "E-mail" %></b>
      </p>
    </td>
    <td align="right">
      <p align="center">
        <%= f.email_field :email %>
      </p>
    </td>
  </tr>
  <tr class="cell4">
    <td align="left">
      <p class="info" align="center">
        <b><%= f.label :password %></b>
      </p>
    </td>
    <td align="right">
      <p align="center">
        <%= f.password_field :password %>
      </p>
    </td>
  </tr>
  <tr class="info">
    <td align="left">
      <p class="info" align="center">
        <%= link_to "(forgot password?)", new_password_reset_path %>
      </p>
    </td>
    <td align="right">
      <p align="center">
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %>
          Keep me logged in
        <% end %>
      </p>
    </td>
  </tr>
</table>
  <div class="cell1">
    <span class="footer">
      <%= f.submit 'Log In' %>
    </span>
  </div>
<% end %>
